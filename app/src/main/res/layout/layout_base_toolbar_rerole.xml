<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- 상단 툴바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="뒤로가기"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="해당 화면 이름 넣기!"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="리프레시"
            android:src="@drawable/ic_refresh" />
    </LinearLayout>

    <!-- 중간 내용 영역: 필요하면 여기에 FrameLayout이나 include 삽입 -->

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- 하단 네비게이션 바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#F5F5F5"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="4dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="홈"
            android:gravity="center"
            android:maxWidth="20dp"
            android:maxHeight="20dp"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_home" />

        <ImageView
            android:layout_width="4dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="이전"
            android:gravity="center"
            android:maxWidth="20dp"
            android:maxHeight="20dp"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_back" />

        <ImageView
            android:layout_width="4dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="다음"
            android:gravity="center"
            android:maxWidth="20dp"
            android:maxHeight="20dp"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_next" />

        <ImageView
            android:layout_width="4dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="플레이리스트"
            android:gravity="center"
            android:maxWidth="20dp"
            android:maxHeight="20dp"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_list" />
    </LinearLayout>
</LinearLayout>
