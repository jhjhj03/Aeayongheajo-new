<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- 상단 툴바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="뒤로가기"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="설문조사"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"/>
    </LinearLayout>

    <!-- 질문 및 장르 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- 질문 아이콘 및 텍스트 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_question" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="어떤 분위기를 선호하시나요?"
                android:textSize="16sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- 장르 버튼 6행 2열 -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="6"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="사랑"
                android:backgroundTint="#FFB3B3"
                android:onClick="onGenreClick"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="짝사랑"
                android:backgroundTint="#FFC6B3"
                android:onClick="onGenreClick"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="산책"
                android:backgroundTint="#FFD9B3"
                android:onClick="onGenreClick"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="운동"
                android:backgroundTint="#FFECB3"
                android:onClick="onGenreClick"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="카페"
                android:backgroundTint="#EEB764"
                android:onClick="onGenreClick"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="드라이브"
                android:backgroundTint="#FFFFB3"
                android:onClick="onGenreClick"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="비오는 날"
                android:backgroundTint="#ECFFB3"
                android:onClick="onGenreClick"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"/>

            <Button
