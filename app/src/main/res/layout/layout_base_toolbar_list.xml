<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- 상단 툴바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:contentDescription="뒤로가기" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="플레이리스트"
            android:textSize="18sp"
            android:gravity="center"
            android:textStyle="bold" />

        <View
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:visibility="invisible"/>
    </LinearLayout>

    <!-- 플레이리스트 항목 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/playlist_item_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="@drawable/playlist_item_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/tvPlaylistTitle"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/sample_thumb"
                android:scaleType="centerCrop"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/text_playlist_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="지독한 짝사랑 플리"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- 재생 버튼 -->
            <ImageButton
                android:id="@+id/btn_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_play"
                android:contentDescription="재생"
                android:padding="4dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/playlist_item_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="@drawable/playlist_item_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/sample_thumb"
                android:scaleType="centerCrop"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="카페에서 듣기 좋은 플리"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_play"
                android:contentDescription="재생"
                android:padding="4dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/playlist_item_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="@drawable/playlist_item_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/sample_thumb"
                android:scaleType="centerCrop"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="공부할 때 듣는 집중 음악"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_play_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_play"
                android:contentDescription="재생"
                android:padding="4dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/playlist_item_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="@drawable/playlist_item_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/sample_thumb"
                android:scaleType="centerCrop"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="새벽 감성 잔잔한 곡들"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_play_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_play"
                android:contentDescription="재생"
                android:padding="4dp" />
        </LinearLayout>
        <!-- 다른 항목도 위와 같이 반복 -->
    </LinearLayout>

    <!-- 중간 내용 영역: 필요하면 여기에 FrameLayout이나 include 삽입 -->

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- 하단 네비게이션 바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#F5F5F5"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="4dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="홈"
            android:gravity="center"
            android:maxWidth="20dp"
            android:maxHeight="20dp"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_home" />

        <ImageView
            android:layout_width="4dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="이전"
            android:gravity="center"
            android:maxWidth="20dp"
            android:maxHeight="20dp"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_back" />

        <ImageView
            android:layout_width="4dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="다음"
            android:gravity="center"
            android:maxWidth="20dp"
            android:maxHeight="20dp"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_next" />

        <ImageView
            android:layout_width="4dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="플레이리스트"
            android:gravity="center"
            android:maxWidth="20dp"
            android:maxHeight="20dp"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_list" />
    </LinearLayout>
</LinearLayout>
